<div class="login-wrap">
    <div class="moving-bg">

    </div>

    <div class="registration-wrap">
        <div class="registration-block">
            <div class="content clearfix">
                <div class="right-part fr">
                    <div class="devise">
                        <h2>Log in</h2>

                        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                        <div class="form-inputs">
                            <%= f.input :email, required: false, autofocus: true,label: false, placeholder: "E-mail Address" %>
                            <%= f.input :password, required: false ,label: false, placeholder: "Password" %>
                            <%= f.input :remember_me,inline_label: 'Remember me', label: false, as: :boolean if devise_mapping.rememberable? %>
                        </div>

                        <div class="form-actions">

                            <button type="submit" class="registration-btn">Log in</button>
                        </div>
                        <% end %>

                        <div class="tip">
                            <%= render "devise/shared/links" %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
