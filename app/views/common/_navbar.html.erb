<nav class="navbar navbar-default" role="navigation">
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <a class="navbar-brand" href="/"><img src='<%= image_url 'logo.png' %>'></a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
              <% navbar_products.each do |product| %>
              <li class="<% if @product == product %>
              activeitem
            <% else %>
              active
            <% end %>">
                 <%= link_to product_path(product) do %>
                  <%= product.title %>
                  <% end %>
              </li>
              <% end %>

                <li class="<% if !@products %>
              active
            <% else %>
              activeitem
            <% end %>">
                    <%= link_to("Products", products_path) %>
                </li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li>
                    <%= link_to carts_path do  %>

                    <i class="fa fa-shopping-cart" aria-hidden="true"></i>
                    <% if current_cart.products.count != 0 %>
                    (
                    <%= current_cart.products.count %>
                    )
                    <% end %>

                    <% end %>
                </li>
                <% if !current_user %>
                <li>
                  <%= link_to("Sign up", new_user_registration_path) %>
                </li>
                <li>
                  <%= link_to("Log in", new_user_session_path) %>
                </li>
            <% else %>

                <li class="dropdown">

                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                      <i class="fa fa-user" aria-hidden="true" ></i>
                        Hi!,
                        <%= current_user.email %>
                        <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                        <% if current_user.admin? %>
                        <li><%= link_to("Admin 选单", admin_products_path ) %></li>
                        <li class="divider"></li>
                        <% end %>

                        <li><%= link_to("My orders", account_orders_path ) %></li>
                        <li class="divider"></li>
                        <li>
                            <%= link_to(content_tag(:i, 'Log out', class: 'fa fa-sign-out'), destroy_user_session_path, method: :delete) %>
                        </li>
                    </ul>
                </li>
                <% end %>
            </ul>
        </div>
        <!-- /.navbar-collapse -->
    </div>
    <!-- /.container-fluid -->
</nav>
